{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {"*": ["./src/*"]},
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "types": ["jest","@testing-library/jest-dom"],
    },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./config/jest/setupTests.ts"
  ],
  }
